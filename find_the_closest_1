#include <iostream>
#include <vector>
using namespace std;

int n;
int m;

int solution(vector<int> arr, int idx) {
    int answer = -1;
    for(int c=idx;c<arr.size();c++){
        if(arr[c]==1){
            answer=c;
            break;
        }
    }
    if(answer!=-1){
    cout<<idx<<"보다 크면서 원소가 1인 가장 작은 인덱스는"<<answer<<"입니다.";
    }
    else if(answer==-1){
        cout<<idx<<"보다 크면서 원소가 1인 가장 작은 인덱스가 존재하지 않습니다."<<endl;
    }
    return answer;
}

int main(){
    cout<<"배열 arr의 크기를 정해주세요."<<endl;
    cin>>n;
    vector<int> arr(n);
    
    cout<<"arr의 원소를 1 또는 0으로 입력해주세요."<<endl;
    for(int a=0;a<n;a++){
        int b;
        cin>>b;
        if(b==1||b==0){
        arr[a]=b;
        }
        else{
            cout<<"arr의 원소는 1 또는 0이어야 합니다."<<endl;
        }
    }
    cout<<"기준 인덱스를 입력해주세요."<<endl;
    cin>>m;
    
    solution(arr,m);
